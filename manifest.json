{
	"name": "OperaExtOptions Demo",
	"version": "1.1",
	"manifest_version": 2,
	
	"description": "Provides a simple-to-use options page for use in extensions for Opera 15+",
	"developer": {
		"name": "Joel Spadin",
		"url": "http://chaosinacan.com"
	},
	"icons": { 
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	},
	
	"background": {
		"scripts": [
			"js/lib/storage.js",
			"js/settings.js",
			"js/background.js"
		],
		"persistent": false
	},
	"content_scripts": [],
	"content_security_policy": "script-src 'self'; object-src 'self';",
	"incognito": "spanning",
	"offline_enabled": true,
	"options_page": "options-page.html",
	"permissions": [],
	"web_accessible_resources": [
		"js/lib/options-page.js.map",
		"js/lib/storage.js.map",
		"js/background.js.map",
		"js/options.js.map",
		"js/settings.js.map"
	]
}